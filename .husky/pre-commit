
echo "🔍 Running pre-commit checks..."

# Get staged TypeScript/JavaScript files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx|js|jsx)$' | tr '\n' ' ')

if [ -n "$STAGED_FILES" ]; then
  echo "📝 Running ESLint on staged files..."
  echo "Files to lint: $STAGED_FILES"
  
  # Run ESLint only on staged files
  echo "$STAGED_FILES" | xargs eslint --fix
  
  # Check if ESLint passed
  if [ $? -ne 0 ]; then
    echo "❌ ESLint failed on staged files. Please fix the issues and try again."
    exit 1
  fi
  
  echo "✅ ESLint passed on staged files"
else
  echo "📝 No TypeScript/JavaScript files to lint"
fi

# Run formatting check
echo "✨ Checking code formatting..."
bun run format:check
