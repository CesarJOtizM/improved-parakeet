# =============================================================================
# ENVIRONMENT VARIABLES - INVENTORY SYSTEM
# =============================================================================
# Este archivo contiene todas las variables de entorno necesarias para el proyecto
# Copia este archivo a .env y ajusta los valores según tu entorno

# =============================================================================
# CONFIGURACIÓN GENERAL DE LA APLICACIÓN
# =============================================================================

# Entorno de ejecución
NODE_ENV=development
BUN_ENV=development

# Puerto de la aplicación
PORT=3000

# Versión de la aplicación
APP_VERSION=1.0.0

# =============================================================================
# BASE DE DATOS - POSTGRESQL
# =============================================================================

# Variable CRÍTICA para Prisma - debe coincidir con package.json
npm_package_version=0.0.1

# URL de conexión a la base de datos (formato Prisma)
DATABASE_URL=postgresql://inventory_user:inventory_password@localhost:5432/inventory_system?schema=public

# Configuración alternativa de base de datos (para desarrollo local)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=inventory_system
DB_USER=inventory_user
DB_PASSWORD=inventory_password
DB_SCHEMA=public

# Configuración de conexión de base de datos para Docker
DOCKER_DATABASE_URL=postgresql://inventory_user:inventory_password@postgres:5432/inventory_system?schema=public

# =============================================================================
# CACHÉ Y SESIONES - REDIS
# =============================================================================

# URL de conexión a Redis
REDIS_URL=redis://localhost:6379

# Configuración alternativa de Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Configuración de Redis para Docker
DOCKER_REDIS_URL=redis://redis:6379

# =============================================================================
# AUTENTICACIÓN Y SEGURIDAD - JWT
# =============================================================================

# Clave secreta para JWT (¡CAMBIAR EN PRODUCCIÓN!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Clave secreta para refresh tokens
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# Tiempo de expiración del access token (en segundos)
JWT_ACCESS_TOKEN_EXPIRES_IN=900

# Tiempo de expiración del refresh token (en segundos)
JWT_REFRESH_TOKEN_EXPIRES_IN=604800

# Algoritmo de encriptación JWT
JWT_ALGORITHM=HS256

# =============================================================================
# ENCRIPTACIÓN Y HASHING
# =============================================================================

# Rondas de salt para bcrypt
BCRYPT_SALT_ROUNDS=12

# Clave secreta para encriptación general
ENCRYPTION_KEY=your-encryption-key-change-in-production

# =============================================================================
# RATE LIMITING Y SEGURIDAD
# =============================================================================

# Límite de requests por IP (por minuto)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS_PER_IP=100

# Límite de requests por usuario (por hora)
RATE_LIMIT_MAX_REQUESTS_PER_USER=1000

# =============================================================================
# LOGGING Y MONITOREO
# =============================================================================

# Nivel de logging
LOG_LEVEL=info

# Formato de logging
LOG_FORMAT=json

# Directorio de logs
LOG_DIR=logs

# =============================================================================
# SWAGGER AND DOCUMENTATION
# =============================================================================

# Enable Swagger in development
SWAGGER_ENABLED=true

# API documentation path
SWAGGER_PATH=api

# =============================================================================
# TESTING
# =============================================================================

# Base de datos para testing
TEST_DATABASE_URL=postgresql://inventory_user:inventory_password@localhost:5432/inventory_system_test?schema=public

# Redis para testing
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# DOCKER Y DESARROLLO
# =============================================================================

# Variables específicas para Docker
DOCKER_NODE_ENV=development
DOCKER_BUN_ENV=development

# =============================================================================
# CONFIGURACIÓN MULTI-TENANT
# =============================================================================

# Dominio por defecto para multi-tenancy
DEFAULT_ORGANIZATION_DOMAIN=localhost

# Tamaño máximo de archivos de importación (en bytes)
MAX_FILE_SIZE=10485760

# =============================================================================
# CONFIGURACIÓN DE CORREO (FUTURO)
# =============================================================================

# Servidor SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# CONFIGURACIÓN DE ALMACENAMIENTO (FUTURO)
# =============================================================================

# Tipo de almacenamiento (local, s3, gcs)
STORAGE_TYPE=local

# Directorio de almacenamiento local
STORAGE_LOCAL_PATH=./uploads

# Configuración AWS S3 (si se usa)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# =============================================================================
# CONFIGURACIÓN DE NOTIFICACIONES (FUTURO)
# =============================================================================

# Webhook para notificaciones
WEBHOOK_URL=https://your-webhook-url.com/notifications

# Token de autenticación para webhooks
WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# CONFIGURACIÓN DE MONITOREO (FUTURO)
# =============================================================================

# URL de Prometheus (si se usa)
PROMETHEUS_URL=http://localhost:9090

# URL de Grafana (si se usa)
GRAFANA_URL=http://localhost:3001

# =============================================================================
# VARIABLES DE ENTORNO ESPECÍFICAS POR AMBIENTE
# =============================================================================

# DESARROLLO
# NODE_ENV=development
# BUN_ENV=development
# LOG_LEVEL=debug
# SWAGGER_ENABLED=true

# PRODUCCIÓN
# NODE_ENV=production
# BUN_ENV=production
# LOG_LEVEL=warn
# SWAGGER_ENABLED=false
# RATE_LIMIT_MAX_REQUESTS_PER_IP=50
# RATE_LIMIT_MAX_REQUESTS_PER_USER=500

# TESTING
# NODE_ENV=test
# BUN_ENV=test
# LOG_LEVEL=error
# SWAGGER_ENABLED=false
