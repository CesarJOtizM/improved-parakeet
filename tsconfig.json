{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      //folders
      "@src": ["src"],
      "@auth": ["src/authentication"],
      "@user": ["src/authentication/users"],
      "@role": ["src/authentication/roles"],
      "@session": ["src/authentication/sessions"],
      "@security": ["src/authentication/security"],
      "@inventory": ["src/inventory"],
      "@product": ["src/inventory/products"],
      "@warehouse": ["src/inventory/warehouses"],
      "@movement": ["src/inventory/movements"],
      "@transfer": ["src/inventory/transfers"],
      "@stock": ["src/inventory/stock"],
      "@report": ["src/reporting"],
      "@import": ["src/imports"],
      "@organization": ["src/organization"],
      "@application": ["src/application"],
      "@infrastructure": ["src/infrastructure"],
      "@interface": ["src/interfaces"],
      "@shared": ["src/shared"],
      "@healthCheck": ["src/healthCheck"],
      // content
      "@src/*": ["src/*"],
      "@auth/*": ["src/authentication/*"],
      "@user/*": ["src/authentication/users/*"],
      "@role/*": ["src/authentication/roles/*"],
      "@session/*": ["src/authentication/sessions/*"],
      "@security/*": ["src/authentication/security/*"],
      "@inventory/*": ["src/inventory/*"],
      "@product/*": ["src/inventory/products/*"],
      "@warehouse/*": ["src/inventory/warehouses/*"],
      "@movement/*": ["src/inventory/movements/*"],
      "@transfer/*": ["src/inventory/transfers/*"],
      "@stock/*": ["src/inventory/stock/*"],
      "@report/*": ["src/reporting/*"],
      "@import/*": ["src/imports/*"],
      "@organization/*": ["src/organization/*"],
      "@application/*": ["src/application/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@interface/*": ["src/interfaces/*"],
      "@shared/*": ["src/shared/*"],
      "@healthCheck/*": ["src/healthCheck/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
